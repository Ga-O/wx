/* pages/order/order.wxss */
page{
  background:#f5f9fc;
}
.menutop{
  display:flex;
}
.menuitem{
  font-size:14px;
  width:20%;
  height:70rpx;
  text-align:center;
  line-height: 70rpx;
}
.card{
  margin:0 auto;
  margin-top:20rpx;
  background-color:#fff;
  
  width:95%;
  height:350rpx;
  border:1rpx solid #eee;
  border-radius:20rpx;
  display:flex;
  flex-direction: column;
}
.carda{
  margin-top:20rpx;
  height:200rpx;
  display:flex;
  justify-content: space-around;
  font-size:15px;
}
.cardaleft{
  width:180rpx;
  height:180rpx;
  border-radius: 15rpx;
}
.cardamid{
  width:45%;
  
}
.cardaright{
  width:25%;
  
}
.cardaright view{
  text-align: right;
}
.cardb{
  height:50rpx;
  text-align:right;
  padding-right:20rpx;
  font-size:15px;
  line-height:50rpx;
}
.cardc{
  display:flex;
  height:100rpx;
}
.cardc button{
  width:200rpx;
  border-radius:40rpx;
  height:70rpx;
  border:1px solid #ccc;
  font-size:14px;
  color:#696969;
  background:#fff;
  line-height: 70rpx;
}
